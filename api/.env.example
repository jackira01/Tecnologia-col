# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/tecnologia-col

# Server Configuration
PORT=5000

# CORS Configuration
# For development: not needed (allows all origins)
# For production: JSON array of allowed origins
# Example: ["https://yourdomain.com","https://www.yourdomain.com"]
ORIGIN_ALLOWED=["https://yourdomain.com"]

# Legacy (can be removed if not used)
FRONT_URL=http://localhost:3000

# Environment
# Options: development | production
ENVIROMENT=development

# JWT Secret (use a strong random string in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production